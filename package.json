{
  "name": "@mariosant/work",
  "author": {
    "name": "Marios Antonoudiou",
    "email": "mariosant@sent.com"
  },
  "bin": {
    "work": ".src/work.js"
  },
  "version": "0.1.1",
  "description": "Run lean rabbitmq consumers",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "release": "standard-version"
  },
  "license": "MIT",
  "dependencies": {
    "amqplib": "^0.5.3",
    "commander": "^2.19.0",
    "ora": "^3.2.0",
    "ramda": "^0.26.1",
    "yargs": "^13.2.1"
  },
  "devDependencies": {
    "delay": "^4.1.0",
    "husky": "^2",
    "jest": "^24",
    "lint-staged": "^8",
    "nodemon": "^1",
    "standard-version": "^5.0.2",
    "xo": "^0"
  },
  "lint-staged": {
    "*": [
      "xo --fix",
      "git add"
    ]
  },
  "xo": {
    "prettier": true,
    "envs": [
      "jest",
      "node",
      "browser"
    ],
    "rules": {
      "camelcase": 1
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mariosant/work.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
